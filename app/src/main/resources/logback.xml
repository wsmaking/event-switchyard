<configuration>

  <!-- JSON ファイル出力用 Appender -->
  <appender name="JSON-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/consumer-app.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/var/log/consumer-app.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder"/>
  </appender>

  <!-- コンソールにも出力したい場合 -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="JSON-FILE"/>
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
